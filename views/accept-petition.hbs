<!DOCTYPE html>
<html>
<head>
	<!-- Load an icon library -->
	<title>| Accept Petition</title>
	<meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-eOJMYsd53ii+scO/bJGFsiCZc+5NDVN2yr8+0RDqr0Ql0h+rP48ckxlpbzKgwra6" crossorigin="anonymous">
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
	<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
	<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
	<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>	
 	<link rel="stylesheet" href="/css/navbar.css">
 	<link rel="stylesheet" href="/css/index.css">
 	<link rel="stylesheet" href="/css/my-petition.css">
 	<script src="/js/acceptpetition.js" type="text/javascript"></script>
</head>
<body>
	{{#with result}}
		{{> sidenav}}
		{{> topnav}}
	{{/with}}

	{{#if search}}
		
	{{else}}	
		<!-- <div class="modal fade" id="myModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
		  <div class="modal-dialog">
		    <div class="modal-content">
		      <div class="modal-header">
		        <h5 class="modal-title" id="exampleModalLabel">Alert</h5>
		        <button type="button" class="btn-close" data-dismiss="modal" aria-label="Close"></button>
		      </div>
		      <div class="modal-body">
		        Changes on status will reflect upon refreshing or filtering the page.
		      </div>
		    </div>
		  </div>
		</div> -->
	{{/if}}
	<div class="container">
		<div class="btn-group dropdown progressselect">
			<button type="button" class="btn btn-success dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
				Filter
			</button>
			{{#with result}}	
			<div class="dropdown-menu dropdown-menu-right dropdown-menu-lg-left">
				<a class="dropdown-item" href="/acceptpetition/{{username}}/filter?search=">All</a>
				<a class="dropdown-item" href="/acceptpetition/{{username}}/filter?search=fa-task">New</a>
				<a class="dropdown-item" href="/acceptpetition/{{username}}/filter?search=fa-spinner">Pending</a>
				<a class="dropdown-item" href="/acceptpetition/{{username}}/filter?search=fa-times-circle">Rejected</a>
				<a class="dropdown-item" href="/acceptpetition/{{username}}/filter?search=fa-check-square">Accepted</a>
			</div>
			{{/with}}
		</div>
		<br>
		<h1>Accept Petitions</h1>
		<hr>
		{{#if search}}
		<h3 class="center">{{search}}</h3>
		{{else}}	
		<h3 class="center">All</h3>
		{{/if}}
		<hr>
	</div>
	<div id="cards">
	{{#each all}}
		 <div class="content" style="max-width: 600px;">
		  <div class="row g-0">
		    <div class="col-md-5">
		      <a class="ge-page" href="/acceptpetition/{{username}}/type?search={{coursetype}}"><p>{{coursetype}}</p></a>
		    </div>
		    <div class="col-md-7">
				<div class="d-grid gap-0 col-1 mx-auto">
				  <button class="btn btn-sm btn-success approve" type="button" id="approve" name="approve" value="{{petitionid}}">Approve</button>
				  <button class="btn btn-sm btn-danger disapprove" type="button" id="disapprove" name="disapprove" value="{{petitionid}}">Disapprove</button>
				  <button class="btn btn-sm btn-warning pending" type="button" id="pending" name="pending" value="{{petitionid}}">Pending</button>
				</div>
		      <div class="card-body">
		      	<a class="petition-page" href="/petition/{{username}}/{{petitionid}}">
		      		<h5 class="card-title"><STRONG>{{coursecode}}</STRONG><i class="{{statusicon}}" aria-hidden="true"></i></h5>
			        <p class="card-text"><b>Time: </b>{{starttime}}-{{endtime}}<br><b>Days: </b>{{day1}} {{day2}}</p>
					<div class="progress">
					  <div class="progress-bar bg-success" role="progressbar" style="width: {{progress}}%;" aria-valuenow="{{signed}}" aria-valuemin="1" aria-valuemax="{{numstudents}}">{{progress}}%</div>
					</div>
			        <p class="card-text"><small class="text-muted">{{signed}} signed of {{numstudents}} goal</small></p>
		        </a>
		    </div>
		   </div>
		  </div>
		 </div>
	{{/each}}
	</div>
	<script>
		function openNav() {
		  document.getElementById("sdnav").style.width = "200px";
		}

		function closeNav() {
		  document.getElementById("sdnav").style.width = "0px";
		}
	</script>
</body>
</html> 
