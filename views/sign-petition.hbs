<!DOCTYPE html>
<html>
<head>
	<!-- Load an icon library -->
	<meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
	<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-eOJMYsd53ii+scO/bJGFsiCZc+5NDVN2yr8+0RDqr0Ql0h+rP48ckxlpbzKgwra6" crossorigin="anonymous">
 	<link rel="stylesheet" href="/css/navbar.css">
 	<link rel="stylesheet" href="/css/index.css">
 	<link rel="stylesheet" href="/css/my-petition.css">
 	<link rel="stylesheet" href="/css/sign-petition.css">
</head>
<body>
	{{#with result}}
		{{> sidenav}}
		{{> topnav}}
	{{/with}}	
	<div class="container">
		{{#with result}}
		<div class="search-container">
			<form action="/signpetition/{{username}}/find" method="get">
				<input type="text" placeholder="Search.." id="search" name="search">
		      	<button type="submit"><i class="fa fa-search" style="color:green;"></i></button>
			</form>
		</div>
		{{/with}}
		<br>
		<h1>Sign Petitions</h1>
		<hr>
		{{#if search}}
		<h3 class="center">{{search}}</h3>
		{{else}}
		<h3 class="center">All</h3>
		{{/if}}
		<hr>
	</div>
	{{#zerolength all 0}}
		<h3 id="result"><br>No results found...<br></h3>
	{{/zerolength}}
	{{#each all}}
		 <div class="content" style="max-width: 600px;">
		  <div class="row g-0">
		    <div class="col-md-5">
		      <a class="ge-page" href="/signpetition/{{username}}/type?search={{coursetype}}">
		      	<p>{{coursetype}}</p>
		      </a>
		    </div>
		    <div class="col-md-7">				
			  <div class="nonadmin">nonadmin</div>
		      <div class="card-body">
		      	<a class="petition-page" href="#">
		      		<h5 class="card-title"><STRONG>{{coursecode}}</STRONG><i class="{{statusicon}}" aria-hidden="true"></i></h5>
			        <p class="card-text"><b>Time: </b>{{starttime}}-{{endtime}}<br><b>Days: </b>{{day1}} {{day2}}</p>
					<div class="progress">
					  <div class="progress-bar bg-success" role="progressbar" style="width: {{progress}}%;" aria-valuenow="{{signed}}" aria-valuemin="1" aria-valuemax="{{numstudents}}">{{progress}}%</div>
					</div>
			        <p class="card-text"><small class="text-muted">{{signed}} signed of {{numstudents}} goal</small></p>
		        </a>
		    </div>
		   </div>
		  </div>
		 </div>
	{{/each}}
	<script>
		function openNav() {
		  document.getElementById("sdnav").style.width = "200px";
		}

		function closeNav() {
		  document.getElementById("sdnav").style.width = "0px";
		}
	</script>
	<script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
	<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
	<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
</body>
</html> 
